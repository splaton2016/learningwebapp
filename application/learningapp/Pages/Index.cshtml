@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-sm">

      <h1>This is a list of Courses - Version 2</h1>    

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th class="th-sm" scope="col">Customer ID</th>
            <th class="th-sm" scope="col">Customer Name</th>
            <th class="th-sm" scope="col">Company Name</th>            
          </tr>
        </thead>
         
          <tbody>
            @foreach(Customer cust in @Model.customers)
            {
            <tr>
            <th scope="row">@cust.CustomeID</th>
            <td>@cust.CustomerName</td>
            <td>@cust.CompanyName</td>            
          </tr>
          }

          </tbody>  
</div>